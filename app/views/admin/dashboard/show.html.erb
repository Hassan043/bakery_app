<style>
  /* Admin Dashboard Styling â€“ Professional Brown-Themed BakeryApp */
  
  .admin-dashboard-container {
    width: 100%;
    max-width: none;
    margin: 0 auto;
    padding: 1.5rem;
    min-height: 100vh;
    background: linear-gradient(135deg, #F8F4E9 0%, #FFFFFF 100%);
  }

  .dashboard-header {
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, #F8F4E9, #E7D7C5);
    padding: 2rem;
    border-radius: 1rem;
    border: 2px solid #D4B483;
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.1);
  }

  .dashboard-title {
    color: #5C3D2E;
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(92, 61, 46, 0.1);
  }

  .dashboard-subtitle {
    color: #A78A7F;
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .welcome-message {
    background: linear-gradient(135deg, #5C3D2E, #4A2F20);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    display: inline-block;
    margin-top: 0.5rem;
  }

  .dashboard-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(1, 1fr);
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .dashboard-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .dashboard-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 1280px) {
    .dashboard-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }
  }

  .dashboard-card {
    background: linear-gradient(135deg, #FFFFFF, #F8F4E9);
    padding: 2rem;
    border: 2px solid #D4B483;
    border-radius: 1rem;
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .dashboard-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #5C3D2E, #A78A7F);
    transition: height 0.3s ease;
  }

  .dashboard-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(92, 61, 46, 0.2);
    border-color: #A78A7F;
  }

  .dashboard-card:hover::before {
    height: 8px;
  }

  .card-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #5C3D2E, #4A2F20);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 8px rgba(92, 61, 46, 0.2);
  }

  .card-icon svg {
    width: 24px;
    height: 24px;
    color: white;
  }

  .card-content {
    flex: 1;
  }

  .card-title {
    color: #5C3D2E;
    font-size: 1.375rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .card-description {
    color: #A78A7F;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .card-action {
    margin-top: auto;
  }

  .card-link {
    background: linear-gradient(135deg, #D4B483, #A78A7F);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    width: 100%;
    justify-content: center;
  }

  .card-link:hover {
    background: linear-gradient(135deg, #A78A7F, #5C3D2E);
    transform: scale(1.05);
    text-decoration: none;
    color: white;
  }

  .card-link svg {
    width: 16px;
    height: 16px;
  }

  /* Specific card styling */
  .card-products {
    background: linear-gradient(135deg, #FFF7ED, #F8F4E9);
  }

  .card-products .card-icon {
    background: linear-gradient(135deg, #EA580C, #DC2626);
  }

  .card-categories {
    background: linear-gradient(135deg, #F0FDF4, #F8F4E9);
  }

  .card-categories .card-icon {
    background: linear-gradient(135deg, #16A34A, #15803D);
  }

  .card-users {
    background: linear-gradient(135deg, #EFF6FF, #F8F4E9);
  }

  .card-users .card-icon {
    background: linear-gradient(135deg, #2563EB, #1D4ED8);
  }

  .card-add-product {
    background: linear-gradient(135deg, #FEF3C7, #F8F4E9);
  }

  .card-add-product .card-icon {
    background: linear-gradient(135deg, #D97706, #B45309);
  }

  .stats-bar {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 3rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #E7D7C5, #D4B483);
    border-radius: 1rem;
    border: 2px solid #A78A7F;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    color: #5C3D2E;
    font-size: 2rem;
    font-weight: 800;
    display: block;
  }

  .stat-label {
    color: #A78A7F;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
</style>

<div class="admin-dashboard-container">
  <div class="dashboard-header">
    <h1 class="dashboard-title">Admin Dashboard</h1>
    <p class="dashboard-subtitle">Manage your bakery business with ease</p>
    <div class="welcome-message">
      Welcome back, Administrator!
    </div>
  </div>

  <div class="dashboard-grid">
    <div class="dashboard-card card-add-product">
      <div class="card-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      </div>
      <div class="card-content">
        <h2 class="card-title">Add New Product</h2>
        <p class="card-description">Create and add delicious new bakery items to your inventory with detailed information and images.</p>
      </div>
      <div class="card-action">
        <%= link_to new_admin_product_path, class: "card-link" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Product
        <% end %>
      </div>
    </div>

    <div class="dashboard-card card-products">
      <div class="card-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
      </div>
      <div class="card-content">
        <h2 class="card-title">Manage Products</h2>
        <p class="card-description">View, edit, and organize all your bakery products. Update prices, availability, and inventory levels.</p>
      </div>
      <div class="card-action">
        <%= link_to admin_products_path, class: "card-link" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View Products
        <% end %>
      </div>
    </div>

    <div class="dashboard-card card-categories">
      <div class="card-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <div class="card-content">
        <h2 class="card-title">Manage Categories</h2>
        <p class="card-description">Organize your products into categories. Create, edit, and manage product classifications for better organization.</p>
      </div>
      <div class="card-action">
        <%= link_to admin_categories_path, class: "card-link" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
          View Categories
        <% end %>
      </div>
    </div>

    <div class="dashboard-card card-users">
      <div class="card-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
      </div>
      <div class="card-content">
        <h2 class="card-title">Manage Users</h2>
        <p class="card-description">View and manage customer accounts, staff members, and user permissions across your bakery platform.</p>
      </div>
      <div class="card-action">
        <%= link_to admin_users_path, class: "card-link" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          View Users
        <% end %>
      </div>
    </div>
  </div>

  <div class="stats-bar">
    <div class="stat-item">
      <span class="stat-number"><%= Product.count %></span>
      <span class="stat-label">Products</span>
    </div>
    <div class="stat-item">
      <span class="stat-number"><%= Category.count %></span>
      <span class="stat-label">Categories</span>
    </div>
    <div class="stat-item">
      <span class="stat-number"><%= User.count %></span>
      <span class="stat-label">Users</span>
    </div>
    <div class="stat-item">
      <span class="stat-number"><%= Product.where(availability: true).count %></span>
      <span class="stat-label">Available Items</span>
    </div>
  </div>
</div>
