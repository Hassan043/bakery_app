<%= form_with(model: [:admin, @product], local: true, html: { class: "space-y-6", multipart: true }) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</strong>
      <ul class="mt-3 list-disc list-inside text-sm">
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :category_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a category' }, { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
  </div>  <div>
    <%= form.label :image, "Product Image", class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :image, 
          accept: "image/*",
          class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100",
          onchange: "previewImage(this)" %>
    <p class="mt-1 text-sm text-gray-500">Upload a clear, high-quality image of your product (JPG, PNG, GIF)</p>
    
    <% if @product.has_image? %>
      <div class="mt-3 p-3 bg-gray-50 rounded-lg">
        <p class="text-sm font-medium text-gray-700 mb-2">Current Image:</p>
        <div class="flex items-start space-x-4">
          <%= image_tag @product.image_path, class: "h-24 w-24 object-cover rounded-lg shadow-sm border", alt: @product.name %>
          <div class="flex-1">
            <p class="text-sm text-gray-600">
              <strong>Path:</strong> <%= @product.image_path %>
            </p>
            <p class="text-sm text-gray-500 mt-1">
              Select a new image above to replace the current one
            </p>
          </div>
        </div>
      </div>
    <% end %>
    
    <!-- Preview for new image -->
    <div id="image-preview" class="mt-3 p-3 bg-blue-50 rounded-lg hidden">
      <p class="text-sm font-medium text-blue-700 mb-2">New Image Preview:</p>
      <img id="preview-img" class="h-24 w-24 object-cover rounded-lg shadow-sm border">
    </div>
  </div>

  <script>
    function previewImage(input) {
      const preview = document.getElementById('image-preview');
      const previewImg = document.getElementById('preview-img');
      
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
          previewImg.src = e.target.result;
          preview.classList.remove('hidden');
        }
        
        reader.readAsDataURL(input.files[0]);
      } else {
        preview.classList.add('hidden');
      }
    }
  </script>

  <div class="flex items-center">
    <%= form.check_box :availability, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
    <%= form.label :availability, "Available for sale", class: "ml-2 block text-sm text-gray-900" %>
  </div>
  <div>
    <%= form.label :quantity, "Stock Quantity", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :quantity, 
          min: 0, 
          placeholder: "Enter available quantity", 
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    <p class="mt-1 text-sm text-gray-500">Number of items available in stock</p>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_products_path, 
          class: "bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-6 rounded-md transition duration-200" %>
    <%= form.submit (@product.persisted? ? "Update Product" : "Create Product"), 
          class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-6 rounded-md transition duration-200 transform hover:scale-105 cursor-pointer" %>
  </div>
<% end %>
