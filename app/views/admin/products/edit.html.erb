<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-2xl font-bold">Edit Product</h1>
    <p class="text-gray-600">Update details for: <span class="font-medium"><%= @product.name %></span></p>
  </div>
  <% if @product.has_image? %>
    <div class="flex-shrink-0">
      <%= image_tag @product.image_path, class: "h-20 w-20 object-cover rounded-lg shadow-md border", alt: @product.name %>
    </div>
  <% end %>
</div>

<div class="bg-white shadow-md rounded-lg p-6">
  <%= render 'form', product: @product %>
</div>

<div class="mt-6 flex justify-between">
  <div class="flex space-x-4">
    <%= link_to admin_products_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition duration-200" do %>
      <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Products
    <% end %>
    <%= link_to admin_root_path, class: "text-gray-500 hover:text-gray-700 font-medium py-2 px-4 transition duration-200" do %>
      Dashboard
    <% end %>
  </div>
  <div>    <%= link_to admin_product_path(@product), 
          data: { 
            turbo_method: :delete, 
            turbo_confirm: "Are you sure you want to delete '#{@product.name}'? This action cannot be undone." 
          }, 
          class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md transition duration-200" do %>
      <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
      Delete Product
    <% end %>
  </div>
</div>
