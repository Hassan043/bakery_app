<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-2xl font-bold">Products</h1>
    <span class="text-gray-600">Total Products: <%= @products.count %></span>
  </div>
  <%= link_to 'New Product', new_admin_product_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="bg-white shadow-md rounded my-6">
  <table class="min-w-full table-auto">
    <thead>
      <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
        <th class="py-3 px-6 text-left">Image</th>
        <th class="py-3 px-6 text-left">Name</th>
        <th class="py-3 px-6 text-left">Category</th>
        <th class="py-3 px-6 text-center">Price</th>
        <th class="py-3 px-6 text-center">Availability</th>
        <th class="py-3 px-6 text-center">Quantity</th>
        <th class="py-3 px-6 text-center">Actions</th>
      </tr>
    </thead>    <tbody class="text-gray-600 text-sm font-light">
      <% @products.each do |product| %>
        <tr class="border-b border-gray-200 hover:bg-gray-100">          <td class="py-3 px-6 text-left">
            <% if product.has_image? %>
              <%= image_tag product.image_path, class: "h-16 w-16 object-cover rounded-lg shadow-sm", alt: product.name %>
            <% else %>
              <div class="h-16 w-16 bg-gray-200 rounded-lg flex items-center justify-center">
                <span class="text-gray-400 text-xs">No Image</span>
              </div>
            <% end %>
          </td>
          <td class="py-3 px-6 text-left whitespace-nowrap">
            <div class="font-medium text-gray-900"><%= product.name %></div>
            <% if product.description.present? %>
              <div class="text-gray-500 text-xs truncate max-w-xs"><%= product.description %></div>
            <% end %>
          </td>
          <td class="py-3 px-6 text-left">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
              <%= product.category&.name || 'N/A' %>
            </span>
          </td>
          <td class="py-3 px-6 text-center">
            <span class="font-medium text-gray-900"><%= number_to_currency(product.price) %></span>
          </td>
          <td class="py-3 px-6 text-center">
            <% if product.availability? %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Available
              </span>
            <% else %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                Unavailable
              </span>
            <% end %>
          </td>
          <td class="py-3 px-6 text-center">
            <span class="font-medium"><%= product.quantity || 0 %></span>
          </td>
          <td class="py-3 px-6 text-center">
            <div class="flex items-center justify-center space-x-2">
              <%= link_to edit_admin_product_path(product), 
                    class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-3 rounded-md text-sm transition duration-200 ease-in-out transform hover:scale-105",
                    title: "Edit #{product.name}" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit
              <% end %>              <%= link_to admin_product_path(product), 
                    data: { 
                      turbo_method: :delete, 
                      turbo_confirm: "Are you sure you want to delete '#{product.name}'? This action cannot be undone." 
                    }, 
                    class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-3 rounded-md text-sm transition duration-200 ease-in-out transform hover:scale-105",
                    title: "Delete #{product.name}" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      <% if @products.empty? %>
        <tr>
          <td colspan="7" class="py-8 px-6 text-center text-gray-500">
            <div class="flex flex-col items-center">
              <svg class="w-12 h-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
              <p class="text-lg font-medium">No products found</p>
              <p class="text-sm">Start by adding your first product</p>
              <%= link_to 'Add Product', new_admin_product_path, class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Back to Dashboard', admin_root_path, class: "text-blue-500 hover:text-blue-700 mt-4 inline-block" %>
