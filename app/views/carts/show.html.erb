<style>
  /* Shopping Cart Styling – Professional Brown-Themed BakeryApp */
  
  .cart-container {
    width: 100%;
    max-width: none;
    margin: 0 auto;
    padding: 1.5rem;
    min-height: 100vh;
    background: linear-gradient(135deg, #F8F4E9 0%, #FFFFFF 100%);
  }

  .cart-header {
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, #F8F4E9, #E7D7C5);
    padding: 2rem;
    border-radius: 1rem;
    border: 2px solid #D4B483;
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.1);
  }

  .cart-title {
    color: #5C3D2E;
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(92, 61, 46, 0.1);
  }

  .cart-subtitle {
    color: #A78A7F;
    font-size: 1.125rem;
    font-weight: 500;
  }

  .empty-cart-container {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #FFFFFF, #F8F4E9);
    border: 2px solid #D4B483;
    border-radius: 1rem;
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.1);
    margin-bottom: 2rem;
  }

  .empty-cart-icon {
    width: 96px;
    height: 96px;
    color: #D4B483;
    margin: 0 auto 2rem auto;
  }

  .empty-cart-message {
    color: #A78A7F;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .continue-shopping-btn {
    background: linear-gradient(135deg, #5C3D2E, #4A2F20);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .continue-shopping-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.3);
    color: white;
    text-decoration: none;
  }

  .cart-items-container {
    background: linear-gradient(135deg, #FFFFFF, #F8F4E9);
    border: 2px solid #D4B483;
    border-radius: 1rem;
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.1);
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .cart-items-header {
    background: linear-gradient(135deg, #E7D7C5, #D4B483);
    padding: 1.5rem;
    border-bottom: 2px solid #D4B483;
  }

  .cart-items-title {
    color: #5C3D2E;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  .cart-item {
    padding: 1.5rem;
    border-bottom: 1px solid #E7D7C5;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    transition: background-color 0.2s ease;
  }

  .cart-item:hover {
    background-color: #F8F4E9;
  }

  .cart-item:last-child {
    border-bottom: none;
  }

  .product-image-container {
    flex-shrink: 0;
  }

  .product-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 0.75rem;
    border: 2px solid #D4B483;
    box-shadow: 0 2px 8px rgba(92, 61, 46, 0.1);
  }

  .no-image-placeholder {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #E7D7C5, #D4B483);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #5C3D2E;
    border: 2px solid #D4B483;
  }

  .product-details {
    flex: 1;
    min-width: 0;
  }

  .product-name {
    color: #5C3D2E;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .product-name:hover {
    color: #A78A7F;
    text-decoration: none;
  }

  .product-category {
    background: linear-gradient(135deg, #D4B483, #A78A7F);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-block;
    margin-bottom: 0.5rem;
  }

  .product-price {
    color: #5C3D2E;
    font-size: 1.125rem;
    font-weight: 700;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background-color: #F8F4E9;
    padding: 0.75rem;
    border-radius: 0.75rem;
    border: 1px solid #E7D7C5;
  }

  .quantity-btn {
    background: linear-gradient(135deg, #D4B483, #A78A7F);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
  }

  .quantity-btn:hover {
    background: linear-gradient(135deg, #A78A7F, #5C3D2E);
    transform: scale(1.1);
    color: white;
    text-decoration: none;
  }

  .quantity-display {
    background-color: white;
    border: 2px solid #D4B483;
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;
    font-weight: 700;
    color: #5C3D2E;
    min-width: 60px;
    text-align: center;
  }

  .item-total-container {
    text-align: right;
    min-width: 120px;
  }

  .item-total-price {
    color: #5C3D2E;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .item-total-calculation {
    color: #A78A7F;
    font-size: 0.875rem;
  }

  .remove-btn {
    background: linear-gradient(135deg, #4A90E2, #357ABD);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
  }

  .remove-btn:hover {
    background: linear-gradient(135deg, #357ABD, #2A5A8A);
    transform: scale(1.05);
    color: white;
    text-decoration: none;
  }

  .cart-summary {
    background: linear-gradient(135deg, #E7D7C5, #D4B483);
    padding: 2rem;
    border-top: 2px solid #A78A7F;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .summary-left {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .summary-info {
    color: #A78A7F;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .summary-right {
    text-align: right;
  }

  .summary-label {
    color: #A78A7F;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .grand-total {
    color: #5C3D2E;
    font-size: 2rem;
    font-weight: 800;
  }

  .action-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .left-actions {
    display: flex;
    gap: 1rem;
  }

  .secondary-btn {
    background: linear-gradient(135deg, #A78A7F, #8B7355);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .secondary-btn:hover {
    background: linear-gradient(135deg, #8B7355, #5C3D2E);
    transform: translateY(-2px);
    color: white;
    text-decoration: none;
  }

  .danger-btn {
    background: linear-gradient(135deg, #EF4444, #DC2626);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .danger-btn:hover {
    background: linear-gradient(135deg, #DC2626, #B91C1C);
    transform: translateY(-2px);
    color: white;
    text-decoration: none;
  }

  .checkout-section {
    text-align: right;
  }

  .checkout-btn {
    background: linear-gradient(135deg, #10B981, #059669);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .checkout-btn:hover {
    background: linear-gradient(135deg, #059669, #047857);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
    color: white;
  }

  .login-required {
    background: linear-gradient(135deg, #F8F4E9, #E7D7C5);
    border: 2px solid #D4B483;
    border-radius: 0.75rem;
    padding: 1.5rem;
    text-align: center;
  }

  .login-message {
    color: #A78A7F;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .login-btn {
    background: linear-gradient(135deg, #10B981, #059669);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .login-btn:hover {
    background: linear-gradient(135deg, #059669, #047857);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
    color: white;
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .cart-item {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .action-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .left-actions {
      justify-content: center;
    }

    .checkout-section {
      text-align: center;
    }
  }
</style>

<div class="cart-container">
  <div class="cart-header">
    <h1 class="cart-title">🛒 Your Shopping Cart</h1>
    <p class="cart-subtitle">Review your delicious selections</p>
  </div>

  <% if @cart.empty? %>
    <div class="empty-cart-container">
      <svg class="empty-cart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
      </svg>
      <p class="empty-cart-message">Your cart is waiting for some delicious treats!</p>
      <%= link_to products_path, class: "continue-shopping-btn" do %>
        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 2.5M7 13l2.5 2.5"></path>
        </svg>
        Continue Shopping
      <% end %>
    </div>
  <% else %>    <div class="cart-items-container">
      <div class="cart-items-header">
        <h2 class="cart-items-title">🥖 Cart Items</h2>
      </div>

      <div>
        <% @cart.each do |product_id, qty| %>
          <% product = Product.find(product_id.to_i) %>
          <div class="cart-item">
            <!-- Product Image -->
            <div class="product-image-container">
              <% if product.has_image? %>
                <%= image_tag product.image_path,
                      class: "product-image",
                      alt: product.name %>
              <% else %>
                <div class="no-image-placeholder">
                  <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 
                          2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0
                          00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
            </div>

            <!-- Product Details -->
            <div class="product-details">
              <h3>
                <%= link_to product.name, product, class: "product-name" %>
              </h3>
              <span class="product-category"><%= product.category.name %></span>
              <p class="product-price"><%= number_to_currency(product.price) %></p>
            </div>

            <!-- Quantity Controls -->
            <div class="quantity-controls">
              <%= link_to decrease_cart_item_path(product),
                    data: { "turbo-method": "post" },
                    class: "quantity-btn",
                    title: "Decrease quantity" do %>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M20 12H4"></path>
                </svg>
              <% end %>

              <span class="quantity-display"><%= qty %></span>

              <%= link_to increase_cart_item_path(product),
                    data: { "turbo-method": "post" },
                    class: "quantity-btn",
                    title: "Increase quantity" do %>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              <% end %>
            </div>

            <!-- Item Total -->
            <div class="item-total-container">
              <p class="item-total-price">
                <%= number_to_currency(product.price * qty) %>
              </p>
              <p class="item-total-calculation">
                <%= qty %> × <%= number_to_currency(product.price) %>
              </p>
            </div>

            <!-- Remove Button -->
            <div>
              <%= link_to remove_from_cart_path(product),
                    data: {
                      "turbo-method": "delete",
                      confirm: "Remove #{product.name} from cart?"
                    },
                    class: "remove-btn",
                    title: "Remove from cart" do %>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138
                        21H7.862a2 2 0 01-1.995-1.858L5
                        7m5 4v6m4-6v6m1-10V4a1 1 0
                        00-1-1h-4a1 1 0 00-1 1v3M4
                        7h16"></path>
                </svg>
                Remove
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Cart Summary -->
      <div class="cart-summary">
        <div class="summary-row">
          <div class="summary-left">
            <p class="summary-info">📦 Total Items: <%= @cart.values.sum %></p>
            <p class="summary-info">🛍️ Unique Products: <%= @cart.keys.count %></p>
          </div>
          <div class="summary-right">
            <p class="summary-label">Grand Total:</p>
            <p class="grand-total">
              <%= number_to_currency(@cart.sum { |id, q| Product.find(id.to_i).price * q }) %>
            </p>
          </div>
        </div>
      </div>
    </div>    <!-- Action Buttons -->
    <div class="action-buttons">
      <div class="left-actions">
        <%= link_to "Continue Shopping", products_path, class: "secondary-btn" %>
        <%= link_to "Clear Cart", clear_cart_path,
              data: {
                "turbo-method": "delete",
                confirm: "Are you sure you want to clear your entire cart?"
              },
              class: "danger-btn" %>
      </div>

      <div class="checkout-section">
        <% if user_signed_in? %>
          <%= form_with url: orders_path, method: :post, class: "inline" do %>
            <%= submit_tag "🎉 Proceed to Checkout",
                  class: "checkout-btn" %>
          <% end %>
        <% else %>
          <div class="login-required">
            <p class="login-message">🔐 Please login to complete your delicious order</p>
            <%= link_to "🛡️ Login to Checkout", new_user_session_path, class: "login-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
