<h1>Your Cart</h1>

<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table class="w-full border-collapse">
    <thead>
      <tr class="border-b">
        <th>Product</th><th>Qty</th><th>Price</th><th>Total</th><th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.each do |product_id, qty| %>
        <% product = Product.find(product_id) %>
        <tr class="border-b">
          <td><%= link_to product.name, product %></td>
          <td>
            <%= qty %>
            <%= link_to "+", add_to_cart_path(product), method: :post, class: "ml-2" %>
            <%= link_to "â€“", remove_from_cart_path(product), method: :delete, class: "ml-1" %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * qty) %></td>
          <td><%= link_to "Remove", remove_from_cart_path(product), method: :delete, class: "text-red-500" %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3" class="text-right">Grand Total:</th>
        <th><%= number_to_currency(@cart.sum { |id,qty| Product.find(id).price * qty }) %></th>
        <th></th>
      </tr>
    </tfoot>
  </table>

  <%= form_with url: orders_path, method: :post do %>
    <%= submit_tag "Place Order", class: "mt-4 bg-green-500 text-white px-4 py-2 rounded" %>
  <% end %>
<% end %>
