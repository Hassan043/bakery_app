<style>
  /* Categories Index Styling - Enhanced Brown-Themed BakeryApp */
  
  .categories-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .categories-header {
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, #F8F4E9, #E7D7C5);
    padding: 2rem;
    border-radius: 1rem;
    border: 2px solid #D4B483;
  }

  .categories-header h1 {
    color: #5C3D2E;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 1px 1px 2px rgba(92, 61, 46, 0.1);
  }

  .categories-header .subtitle {
    color: #A78A7F;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .category-card {
    background: linear-gradient(135deg, #FFFFFF, #F8F4E9);
    border: 2px solid #D4B483;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #5C3D2E, #A78A7F, #D4B483);
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(92, 61, 46, 0.2);
    border-color: #A78A7F;
  }

  .category-name {
    color: #5C3D2E;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
  }

  .category-description {
    color: #A78A7F;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    text-align: center;
    min-height: 2.4rem;
  }

  .category-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1.5rem;
    padding: 0.75rem;
    background-color: #F8F4E9;
    border-radius: 0.5rem;
    border: 1px solid #E7D7C5;
  }

  .category-stats-text {
    color: #5C3D2E;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .category-actions {
    display: flex;
    justify-content: center;
  }

  .view-category-btn {
    background: linear-gradient(135deg, #5C3D2E, #4A2F20);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .view-category-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(92, 61, 46, 0.3);
    color: white;
    text-decoration: none;
  }

  .view-category-btn svg {
    width: 18px;
    height: 18px;
  }

  .new-category-section {
    text-align: center;
    margin-top: 3rem;
  }

  .new-category-btn {
    background: linear-gradient(135deg, #D4B483, #A78A7F);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .new-category-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(167, 138, 127, 0.3);
    color: white;
    text-decoration: none;
  }

  .new-category-btn svg {
    width: 20px;
    height: 20px;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #A78A7F;
  }

  .empty-state svg {
    width: 80px;
    height: 80px;
    color: #D4B483;
    margin-bottom: 2rem;
  }

  .empty-state h2 {
    color: #5C3D2E;
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .empty-state p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .notice {
    background: linear-gradient(135deg, #D1FAE5, #A7F3D0);
    color: #065F46;
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border: 1px solid #34D399;
    font-weight: 600;
  }
</style>

<div class="categories-container">
  <% if notice %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <div class="categories-header">
    <h1>Our Bakery Categories</h1>
    <p class="subtitle">Explore our delicious range of freshly baked goods</p>
  </div>
  <% if @categories.any? %>
    <div class="categories-grid">
      <% @categories.each do |category| %>
        <%= render category %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
      </svg>
      <h2>No Categories Available</h2>
      <p>Start building your bakery menu by creating your first category of delicious baked goods.</p>
    </div>
  <% end %>

  <div class="new-category-section">
    <%= link_to new_category_path, class: "new-category-btn" do %>
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      Add New Category
    <% end %>
  </div>
</div>
