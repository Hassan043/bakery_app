<h1>Order #<%= @order.id %></h1>
<p>Status: <strong><%= @order.status.humanize %></strong></p>
<p>Placed on: <%= @order.created_at.strftime("%B %-d, %Y at %l:%M %p") %></p>

<h2>Items</h2>
<table class="w-full border-collapse">
  <thead>
    <tr class="border-b"><th>Product</th><th>Qty</th><th>Price</th><th>Subtotal</th></tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr class="border-b">
        <td><%= link_to item.product.name, item.product %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= number_to_currency(item.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3" class="text-right">Total:</th>
      <th><%= number_to_currency(@order.total) %></th>
    </tr>
  </tfoot>
</table>
