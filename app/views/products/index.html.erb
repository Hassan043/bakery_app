<h1>Products</h1>

<%= form_with url: products_path, method: :get, local: true, class: "mb-4 flex space-x-2" do |f| %>
  <%= f.text_field    :q,            value: params[:q],            placeholder: "Search by name", class: "border p-2 rounded" %>
  <%= f.select        :category_id, options_for_select(@categories.pluck(:name, :id), params[:category_id]), include_blank: "All Categories", class: "border p-2 rounded" %>
  <%= f.submit "Filter", class: "bg-blue-500 text-white px-4 rounded" %>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">  <% @products.each do |product| %>
    <div class="border rounded p-4 shadow">
      <% if product.has_image? %>
        <%= image_tag product.image_path, class: "mb-2 w-full h-48 object-cover rounded", alt: product.name %>
      <% end %>
      <h2 class="font-bold"><%= link_to product.name, product %></h2>
      <p class="text-gray-600"><%= number_to_currency(product.price) %></p>
      <p class="text-sm"><%= truncate(product.description, length: 80) %></p>      <!-- Add to Cart Form -->
      <%= form_with url: add_to_cart_path(product), method: :post, local: true, class: "mt-4" do |f| %>
        <div class="flex items-center space-x-2">
          <%= f.number_field :quantity, value: 1, min: 1, max: 10, class: "w-16 px-2 py-1 border border-gray-300 rounded text-center focus:ring-2 focus:ring-pink-500" %>
          <%= f.submit "Add to Cart", class: "bg-pink-500 hover:bg-pink-600 text-white px-4 py-2 rounded font-medium transition duration-200 flex-1" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= paginate @products %>
</div>
