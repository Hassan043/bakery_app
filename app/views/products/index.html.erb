<h1>Products</h1>

<%= form_with url: products_path, method: :get, local: true, class: "mb-4 flex space-x-2" do |f| %>
  <%= f.text_field    :q,            value: params[:q],            placeholder: "Search by name", class: "border p-2 rounded" %>
  <%= f.select        :category_id, options_for_select(@categories.pluck(:name, :id), params[:category_id]), include_blank: "All Categories", class: "border p-2 rounded" %>
  <%= f.submit "Filter", class: "bg-blue-500 text-white px-4 rounded" %>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="border rounded p-4 shadow">
      <% if product.images.attached? %>
        <%= image_tag product.images.first.variant(resize_to_limit: [200,200]), class: "mb-2" %>
      <% end %>
      <h2 class="font-bold"><%= link_to product.name, product %></h2>
      <p class="text-gray-600"><%= number_to_currency(product.price) %></p>
      <p class="text-sm"><%= truncate(product.description, length: 80) %></p>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= paginate @products %>
</div>
