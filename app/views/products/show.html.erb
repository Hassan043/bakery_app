<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
    <%= notice %>
  </div>
<% end %>

<div class="max-w-4xl mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
    <!-- Product Image -->
    <div>
      <% if @product.has_image? %>
        <%= image_tag @product.image_path, class: "w-full h-96 object-cover rounded-lg shadow-lg", alt: @product.name %>
      <% else %>
        <div class="w-full h-96 bg-gray-200 rounded-lg flex items-center justify-center">
          <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Product Details -->
    <div class="space-y-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @product.name %></h1>
        <p class="text-sm text-gray-500 mb-4">
          Category: <%= link_to @product.category.name, category_path(@product.category), class: "text-pink-600 hover:text-pink-700" %>
        </p>
        <p class="text-4xl font-bold text-pink-600 mb-6"><%= number_to_currency(@product.price) %></p>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Description</h3>
        <p class="text-gray-600 leading-relaxed"><%= @product.description %></p>
      </div>
      
      <!-- Add to Cart Section -->
      <div class="bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Add to Cart</h3>
        <%= form_with url: add_to_cart_path(@product), method: :post, local: true, class: "space-y-4" do |f| %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
            <div class="flex items-center space-x-4">
              <%= f.number_field :quantity, value: 1, min: 1, max: 20, 
                    class: "w-20 px-3 py-2 border border-gray-300 rounded-md text-center focus:ring-2 focus:ring-pink-500 focus:border-transparent" %>
              <span class="text-sm text-gray-500">Available: <%= @product.quantity || 'In Stock' %></span>
            </div>
          </div>
          
          <div class="flex space-x-4">
            <%= f.submit "Add to Cart", class: "bg-pink-500 hover:bg-pink-600 text-white px-8 py-3 rounded-lg font-medium transition duration-200 shadow-md hover:shadow-lg flex-1" %>
            <%= link_to "View Cart", cart_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-8 py-3 rounded-lg font-medium transition duration-200 text-center" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Navigation Links -->
  <div class="border-t pt-8 flex justify-between items-center">
    <%= link_to products_path, class: "flex items-center text-gray-600 hover:text-pink-600 transition duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Products
    <% end %>
    
    <% if user_signed_in? && (current_user.admin? || current_user.staff?) %>
      <div class="flex space-x-4">
        <%= link_to "Edit Product", edit_product_path(@product), class: "text-blue-600 hover:text-blue-700" %>
        <span class="text-gray-300">|</span>
        <%= button_to "Delete Product", @product, method: :delete, 
              data: { confirm: "Are you sure?" },
              class: "text-red-600 hover:text-red-700 bg-transparent border-none cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
